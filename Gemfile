  gem 'guard-livereload'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'spork'
  gem 'rack-livereload'
  gem 'rspec-rails'
  gem 'capistrano'
end
group :test do
  gem 'spork'
  gem 'factory_girl_rails'
  gem 'rspec-rails'
end

gem 'jquery-rails'
