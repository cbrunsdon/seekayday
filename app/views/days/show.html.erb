<%- model_class = @day.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:day) %>:</strong><br>
  <%= @day.day %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:health_level_id) %>:</strong><br>
  <%= @day.health_level.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:activity_id) %>:</strong><br>
  <%= @day.activity.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:mood_id) %>:</strong><br>
  <%= @day.mood.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:alarm_time) %>:</strong><br>
  <%= l @day.alarm_time if @day.alarm_time %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              days_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_day_path(@day), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              day_path(@day),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
