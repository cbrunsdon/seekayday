<%= form_for @day, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :day, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :day, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :health_level_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :health_level_id, HealthLevel.all.collect { |x| [x.name, x.id] }, :class => 'select_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :activity_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :activity_id, Activity.all.collect { |x| [x.name, x.id] }, :class => 'select_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mood_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :mood_id, Mood.all.collect { |x| [x.name, x.id] }, :class => 'select_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                days_path, :class => 'btn' %>
  </div>

  <div class="control-group">
    <%= f.label :alarm_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :alarm_time, :class => 'datetime_select' %>
    </div>
  </div>

<% end %>
