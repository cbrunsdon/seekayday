<%- model_class = @health_level.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @health_level.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:level) %>:</strong><br>
  <%= @health_level.level %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              health_levels_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_health_level_path(@health_level), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              health_level_path(@health_level),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
